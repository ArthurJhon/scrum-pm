<h2>Zadania</h2>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Opis</th>
    <th>Status</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.name %></td>
    <td><%= task.description %></td>
    <td><%=h task.status_id %></td>
    <td><%=h task.user_story_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

